<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <title><%= title %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/static/css/main.css">
</head>
<body>
    <div class="wrapper">
        <%- include('../partials/sidebar', { user, currentPage }) %>
        
        <div class="main" id="mainContent">
            <%- include('../partials/navbar', { user, notificaciones: [] }) %>
            
            <main class="content">
                <div class="container-fluid p-0">
                    <!-- Success/Error Messages -->
                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <div class="row mb-4 align-items-center">
                        <div class="col">
                            <h1 class="h3 mb-1"><i class="bi bi-box-seam me-2"></i>Inventario de Materiales</h1>
                            <p class="text-muted mb-0">Gestiona el stock de todos los materiales.</p>
                        </div>
                        <div class="col-auto">
                            <% if (user.role === 'ADMIN' || user.role === 'SUPERVISOR') { %>
                                <a href="/materiales/nuevo" class="btn btn-primary">
                                    <i class="bi bi-plus-lg me-1"></i>Nuevo Material
                                </a>
                            <% } %>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <% if (typeof stats !== 'undefined') { %>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-boxes display-6 text-primary"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h5 class="mb-0"><%= stats.total %></h5>
                                                <small class="text-muted">Total Materiales</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-exclamation-triangle display-6 text-warning"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h5 class="mb-0"><%= stats.stockBajo %></h5>
                                                <small class="text-muted">Stock Bajo</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-currency-dollar display-6 text-success"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h5 class="mb-0">$<%= formatCurrency(stats.valorTotal) %></h5>
                                                <small class="text-muted">Valor Total</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <div class="card shadow">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>C√≥digo</th>
                                            <th>Nombre</th>
                                            <th>Obra Asociada</th>
                                            <th>Unidad</th>
                                            <th>Stock</th>
                                            <th>Precio Unit.</th>
                                            <th>Valor Total</th>
                                            <th>Fecha Ingreso</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (materiales && materiales.length > 0) { %>
                                            <% materiales.forEach(material => { %>
                                                <tr>
                                                    <td><code><%= material.codigoInterno %></code></td>
                                                    <td class="fw-bold"><%= material.nombre %></td>
                                                    <td>
                                                        <small class="text-muted">
                                                            <i class="bi bi-building me-1"></i>
                                                            <%= material.obraNombre %>
                                                        </small>
                                                    </td>
                                                    <td><span class="badge bg-secondary"><%= material.unidad %></span></td>
                                                    <td>
                                                        <% if (material.stock < 10) { %>
                                                            <span class="text-warning fw-bold">
                                                                <i class="bi bi-exclamation-triangle me-1"></i>
                                                                <%= material.stock %>
                                                            </span>
                                                        <% } else { %>
                                                            <span class="text-success"><%= material.stock %></span>
                                                        <% } %>
                                                    </td>
                                                    <td>$<%= formatCurrency(material.precio) %></td>
                                                    <td>$<%= formatCurrency(material.stock * material.precio) %></td>
                                                    <td><%= moment(material.fechaIngreso).format('DD/MM/YYYY') %></td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <% if (user.role === 'ADMIN' || user.role === 'SUPERVISOR') { %>
                                                                <button class="btn btn-outline-info btn-sm" 
                                                                        onclick="verDetalles('<%= material.id %>')" 
                                                                        title="Ver detalles">
                                                                    <i class="bi bi-eye"></i>
                                                                </button>
                                                                <button class="btn btn-outline-warning btn-sm" 
                                                                        onclick="editarMaterial('<%= material.id %>')" 
                                                                        title="Editar">
                                                                    <i class="bi bi-pencil"></i>
                                                                </button>
                                                                <button class="btn btn-outline-danger btn-sm" 
                                                                        onclick="eliminarMaterial('<%= material.id %>', '<%= material.nombre %>')" 
                                                                        title="Eliminar">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="9" class="text-center py-4">
                                                    <div class="text-muted">
                                                        <i class="bi bi-box-seam display-1"></i>
                                                        <p class="mt-2">No hay materiales en el inventario.</p>
                                                        <% if (user.role === 'ADMIN' || user.role === 'SUPERVISOR') { %>
                                                            <a href="/materiales/nuevo" class="btn btn-primary">
                                                                <i class="bi bi-plus-lg me-1"></i>Agregar Primer Material
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            
            <%- include('../partials/footer') %>
        </div>
    </div>

    <!-- Modal for Material Details -->
    <div class="modal fade" id="materialDetailsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="materialDetailsContent">
                    <!-- Details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

<!-- Enhanced Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirmar Eliminaci√≥n
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning border-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        ¬°Atenci√≥n! Esta acci√≥n no se puede deshacer
                    </h6>
                    <p class="mb-0">
                        Est√°s a punto de eliminar permanentemente este material del sistema.
                    </p>
                </div>
                
                <div class="material-info mb-3">
                    <h6>Material a eliminar:</h6>
                    <div class="row">
                        <div class="col-6">
                            <strong>Nombre:</strong>
                            <p class="mb-1" id="deleteMaterialName">-</p>
                        </div>
                        <div class="col-6">
                            <strong>C√≥digo:</strong>
                            <p class="mb-1" id="deleteMaterialCode">-</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Stock actual:</strong>
                            <p class="mb-1" id="deleteMaterialStock">-</p>
                        </div>
                        <div class="col-6">
                            <strong>Valor total:</strong>
                            <p class="mb-1" id="deleteMaterialValue">-</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <strong>Obra asociada:</strong>
                            <p class="mb-1" id="deleteMaterialObra">-</p>
                        </div>
                    </div>
                </div>

                <div class="consequences">
                    <h6 class="text-danger">Consecuencias de esta acci√≥n:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            Se perder√° todo el registro hist√≥rico del material
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            Los reportes existentes podr√≠an mostrar inconsistencias
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            Las certificaciones que incluyen este material podr√≠an verse afectadas
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            El stock y valor total del inventario se actualizar√° autom√°ticamente
                        </li>
                    </ul>
                </div>

                <div class="mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDeleteCheckbox">
                        <label class="form-check-label" for="confirmDeleteCheckbox">
                            <strong>Confirmo que entiendo las consecuencias y deseo continuar</strong>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn" disabled>
                    <i class="bi bi-trash3 me-1"></i>Eliminar Permanentemente
                </button>
            </div>
        </div>
    </div>
    </div>    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/app.js"></script>
    <script>
    function verDetalles(materialId) {
        console.log('üîç Viendo detalles del material:', materialId);
        
        fetch(`/api/materiales/${materialId}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(data => {
                document.getElementById('materialDetailsContent').innerHTML = `
                    <div class="row">
                        <div class="col-6"><strong>ID:</strong> ${data.id}</div>
                        <div class="col-6"><strong>C√≥digo:</strong> ${data.codigoInterno}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6"><strong>Nombre:</strong> ${data.nombre}</div>
                        <div class="col-6"><strong>Unidad:</strong> ${data.unidad}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6"><strong>Stock:</strong> ${data.cantidad}</div>
                        <div class="col-6"><strong>Precio:</strong> $${data.precio}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12"><strong>Obra:</strong> ${data.obraNombre}</div>
                    </div>
                `;
                new bootstrap.Modal(document.getElementById('materialDetailsModal')).show();
            })
            .catch(error => {
                console.error('‚ùå Error al cargar detalles:', error);
                alert('Error al cargar detalles del material: ' + error.message);
            });
    }

    function editarMaterial(materialId) {
        alert('Funcionalidad de edici√≥n en desarrollo');
        // window.location.href = `/materiales/editar/${materialId}`;
    }

    // Global variables for delete confirmation
    let materialToDelete = null;

    // Enhanced delete confirmation
    function eliminarMaterial(materialId, materialNombre, materialData = {}) {
        materialToDelete = materialId;
        
        // Populate modal with material information
        document.getElementById('deleteMaterialName').textContent = materialNombre || 'N/A';
        document.getElementById('deleteMaterialCode').textContent = materialData.codigo || 'N/A';
        document.getElementById('deleteMaterialStock').textContent = materialData.stock || 'N/A';
        document.getElementById('deleteMaterialValue').textContent = materialData.valor || 'N/A';
        document.getElementById('deleteMaterialObra').textContent = materialData.obra || 'N/A';
        
        // Reset checkbox and disable button
        document.getElementById('confirmDeleteCheckbox').checked = false;
        document.getElementById('confirmDeleteBtn').disabled = true;
        
        // Show modal
        new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
    }

    // Handle checkbox change
    document.getElementById('confirmDeleteCheckbox').addEventListener('change', function() {
        document.getElementById('confirmDeleteBtn').disabled = !this.checked;
    });

    // Handle actual deletion
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
        if (!materialToDelete) return;
        
        // Show loading state
        this.disabled = true;
        this.innerHTML = '<i class="spinner-border spinner-border-sm me-1"></i>Eliminando...';
        
        fetch(`/api/materiales/${materialToDelete}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Hide modal and reload page
                bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal')).hide();
                
                // Show success message
                const alert = document.createElement('div');
                alert.className = 'alert alert-success alert-dismissible fade show';
                alert.innerHTML = `
                    <i class="bi bi-check-circle me-2"></i>
                    Material eliminado correctamente
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.container-fluid').insertBefore(alert, document.querySelector('.row'));
                
                // Reload page after a short delay
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                alert('Error al eliminar el material: ' + data.message);
                // Reset button
                document.getElementById('confirmDeleteBtn').disabled = false;
                document.getElementById('confirmDeleteBtn').innerHTML = '<i class="bi bi-trash3 me-1"></i>Eliminar Permanentemente';
            }
        })
        .catch(error => {
            console.error('‚ùå Error al eliminar:', error);
            alert('Error al eliminar el material: ' + error.message);
            // Reset button
            document.getElementById('confirmDeleteBtn').disabled = false;
            document.getElementById('confirmDeleteBtn').innerHTML = '<i class="bi bi-trash3 me-1"></i>Eliminar Permanentemente';
        });
    });

    </script>
</body>
</html>