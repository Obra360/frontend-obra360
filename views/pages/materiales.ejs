<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/static/css/main.css" />
  </head>
  <body>
    <div class="wrapper">
      <%- include('../partials/sidebar', { user, currentPage }) %>

      <div class="main" id="mainContent">
        <%- include('../partials/navbar', { user, notificaciones: [] }) %>

        <main class="content">
          <div class="container-fluid p-0">
            <!-- Success/Error Messages -->
            <% if (typeof success !== 'undefined' && success) { %>
            <div
              class="alert alert-success alert-dismissible fade show"
              role="alert"
            >
              <%= success %>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
              ></button>
            </div>
            <% } %> <% if (typeof error !== 'undefined' && error) { %>
            <div
              class="alert alert-danger alert-dismissible fade show"
              role="alert"
            >
              <%= error %>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
              ></button>
            </div>
            <% } %>

            <div class="row mb-4 align-items-center">
              <div class="col">
                <h1 class="h3 mb-1">
                  <i class="bi bi-box-seam me-2"></i>Inventario de Materiales
                </h1>
                <p class="text-muted mb-0">
                  Gestiona el stock de todos los materiales.
                </p>
              </div>
              <div class="col-auto">
                <% if (user.role === 'ADMIN' || user.role === 'SUPERVISOR') { %>
                <a href="/materiales/nuevo" class="btn btn-primary">
                  <i class="bi bi-plus-lg me-1"></i>Nuevo Material
                </a>
                <button
                  type="button"
                  class="btn btn-info"
                  data-bs-toggle="modal"
                  data-bs-target="#importModal"
                >
                  <i class="bi bi-file-earmark-excel"></i> Importar Excel
                </button>
                <input
                  type="file"
                  id="fileInput"
                  style="display: none"
                  accept=".xlsx, .xls"
                />
                <% } %>
              </div>
            </div>

            <!-- Stats Cards -->
            <% if (typeof stats !== 'undefined') { %>
            <div class="row mb-4">
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="flex-shrink-0">
                        <i class="bi bi-boxes display-6 text-primary"></i>
                      </div>
                      <div class="flex-grow-1 ms-3">
                        <h5 class="mb-0"><%= stats.total %></h5>
                        <small class="text-muted">Total Materiales</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="flex-shrink-0">
                        <i
                          class="bi bi-exclamation-triangle display-6 text-warning"
                        ></i>
                      </div>
                      <div class="flex-grow-1 ms-3">
                        <h5 class="mb-0"><%= stats.stockBajo %></h5>
                        <small class="text-muted">Stock Bajo</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="flex-shrink-0">
                        <i
                          class="bi bi-currency-dollar display-6 text-success"
                        ></i>
                      </div>
                      <div class="flex-grow-1 ms-3">
                        <h5 class="mb-0">
                          $<%= formatCurrency(stats.valorTotal) %>
                        </h5>
                        <small class="text-muted">Valor Total</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>

            <div class="card shadow">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover align-middle">
                    <thead class="table-light">
                      <tr>
                        <th>CÃ³digo</th>
                        <th>Nombre</th>
                        <th>Obra Asociada</th>
                        <th>Unidad</th>
                        <th>Stock</th>
                        <th>Precio Unit.</th>
                        <th>Valor Total</th>
                        <th>Fecha Ingreso</th>
                        <th class="text-center">Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (materiales && materiales.length > 0) { %> <%
                      materiales.forEach(material => { %>
                      <tr>
                        <td><code><%= material.codigoInterno %></code></td>
                        <td class="fw-bold"><%= material.nombre %></td>
                        <td>
                          <small class="text-muted">
                            <i class="bi bi-building me-1"></i>
                            <%= material.obraNombre %>
                          </small>
                        </td>
                        <td>
                          <span class="badge bg-secondary"
                            ><%= material.unidad %></span
                          >
                        </td>
                        <td>
                          <% if (material.stock < 10) { %>
                          <span class="text-warning fw-bold">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <%= material.stock %>
                          </span>
                          <% } else { %>
                          <span class="text-success"
                            ><%= material.stock %></span
                          >
                          <% } %>
                        </td>
                        <td>$<%= formatCurrency(material.precio) %></td>
                        <td>
                          $<%= formatCurrency(material.stock * material.precio)
                          %>
                        </td>
                        <td>
                          <%= moment(material.fechaIngreso).format('DD/MM/YYYY')
                          %>
                        </td>
                        <td class="text-center">
                          <div class="btn-group" role="group">
                            <% if (user.role === 'ADMIN' || user.role ===
                            'SUPERVISOR') { %>
                            <button
                              class="btn btn-outline-info btn-sm"
                              onclick="verDetalles('<%= material.id %>')"
                              title="Ver detalles"
                            >
                              <i class="bi bi-eye"></i>
                            </button>
                            <button
                              class="btn btn-outline-warning btn-sm"
                              onclick="editarMaterial('<%= material.id %>')"
                              title="Editar"
                            >
                              <i class="bi bi-pencil"></i>
                            </button>
                            <button
                              class="btn btn-outline-danger btn-sm"
                              onclick="eliminarMaterial('<%= material.id %>', '<%= material.nombre %>')"
                              title="Eliminar"
                            >
                              <i class="bi bi-trash"></i>
                            </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                      <% }); %> <% } else { %>
                      <tr>
                        <td colspan="9" class="text-center py-4">
                          <div class="text-muted">
                            <i class="bi bi-box-seam display-1"></i>
                            <p class="mt-2">
                              No hay materiales en el inventario.
                            </p>
                            <% if (user.role === 'ADMIN' || user.role ===
                            'SUPERVISOR') { %>
                            <a href="/materiales/nuevo" class="btn btn-primary">
                              <i class="bi bi-plus-lg me-1"></i>Agregar Primer
                              Material
                            </a>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>

        <%- include('../partials/footer') %>
      </div>
    </div>

    <!-- Modal for Material Details -->
    <div class="modal fade" id="materialDetailsModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Detalles del Material</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body" id="materialDetailsContent">
            <!-- Details will be loaded here -->
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="importModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Importar Materiales desde Excel</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <div id="uploadSection">
              <div class="mb-3">
                <label for="excelFile" class="form-label"
                  >Seleccionar archivo Excel</label
                >
                <input
                  type="file"
                  class="form-control"
                  id="excelFile"
                  accept=".xlsx,.xls"
                />
                <div class="form-text">
                  Formato esperado: CÃ³digo | Nombre | Obra Asociada | Unidad |
                  Stock | Precio Unit. | Fecha Ingreso
                  <br />
                  <small class="text-muted"
                    >Obra Asociada y Fecha Ingreso son opcionales</small
                  >
                </div>
              </div>

              <!-- Drag & Drop Area -->
              <div
                id="dropZone"
                class="border border-dashed border-2 border-secondary rounded p-4 text-center"
              >
                <i class="bi bi-cloud-upload fs-1 text-muted"></i>
                <p class="mb-0">
                  Arrastra el archivo aquÃ­ o haz clic para seleccionar
                </p>
              </div>
            </div>

            <!-- Progress Section -->
            <div id="progressSection" style="display: none">
              <div class="d-flex align-items-center">
                <div
                  class="spinner-border spinner-border-sm me-2"
                  role="status"
                ></div>
                <span>Procesando archivo...</span>
              </div>
              <div class="progress mt-2">
                <div
                  class="progress-bar progress-bar-striped progress-bar-animated"
                  style="width: 100%"
                ></div>
              </div>
            </div>

            <!-- Results Section -->
            <div id="resultsSection" style="display: none">
              <div class="alert alert-info" id="summaryAlert">
                <h6 class="alert-heading">Resumen de ImportaciÃ³n</h6>
                <p id="summaryText" class="mb-0"></p>
              </div>

              <div id="errorsList" style="display: none">
                <h6>Errores encontrados:</h6>
                <div class="table-responsive">
                  <table class="table table-sm table-striped">
                    <thead>
                      <tr>
                        <th>Fila</th>
                        <th>Error</th>
                      </tr>
                    </thead>
                    <tbody id="errorsTableBody"></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cerrar
            </button>
            <button
              type="button"
              class="btn btn-primary"
              id="uploadBtn"
              style="display: none"
            >
              Importar
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/app.js"></script>
    <script src="/static/js/page-materiales.js"></script>
    <script>
      function verDetalles(materialId) {
        console.log("ð Viendo detalles del material:", materialId);

        fetch(`/api/materiales/${materialId}`)
          .then((response) => {
            if (!response.ok) {
              throw new Error(
                `HTTP ${response.status}: ${response.statusText}`
              );
            }
            return response.json();
          })
          .then((data) => {
            document.getElementById("materialDetailsContent").innerHTML = `
                    <div class="row">
                        <div class="col-6"><strong>ID:</strong> ${data.id}</div>
                        <div class="col-6"><strong>CÃ³digo:</strong> ${data.codigoInterno}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6"><strong>Nombre:</strong> ${data.nombre}</div>
                        <div class="col-6"><strong>Unidad:</strong> ${data.unidad}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6"><strong>Stock:</strong> ${data.cantidad}</div>
                        <div class="col-6"><strong>Precio:</strong> $${data.precio}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12"><strong>Obra:</strong> ${data.obraNombre}</div>
                    </div>
                `;
            new bootstrap.Modal(
              document.getElementById("materialDetailsModal")
            ).show();
          })
          .catch((error) => {
            console.error("â Error al cargar detalles:", error);
            alert("Error al cargar detalles del material: " + error.message);
          });
      }

      function editarMaterial(materialId) {
        alert("Funcionalidad de ediciÃ³n en desarrollo");
        // window.location.href = `/materiales/editar/${materialId}`;
      }

      function eliminarMaterial(materialId, materialNombre) {
        if (
          confirm(
            `Â¿EstÃ¡s seguro de que quieres eliminar el material "${materialNombre}"?`
          )
        ) {
          fetch(`/api/materiales/${materialId}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                location.reload();
              } else {
                alert("Error al eliminar el material: " + data.message);
              }
            })
            .catch((error) => {
              console.error("â Error al eliminar:", error);
              alert("Error al eliminar el material: " + error.message);
            });
        }
      }
    </script>
  </body>
</html>
